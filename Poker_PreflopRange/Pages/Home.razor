@page "/"
@using Microsoft.AspNetCore.Components.Routing

<PageTitle>Poker Training Hub</PageTitle>

<div class="home-container">
    <h1 class="home-title">Poker Training Hub</h1>
    <p class="home-subtitle">
        Welcome to your poker training platform! Choose from different training modules to improve your game.
    </p>
    
    <div class="nav-buttons-container">
        <NavLink href="preflop-range" class="nav-button">
            <span class="nav-button-icon">🃏</span>
            <div class="nav-button-title">Preflop Range Trainer</div>
            <div class="nav-button-description">
                Practice Button (BTN) position preflop ranges. Learn which hands to play and which to fold.
            </div>
        </NavLink>
        
        <NavLink href="counter" class="nav-button">
            <span class="nav-button-icon">🔢</span>
            <div class="nav-button-title">Counter Demo</div>
            <div class="nav-button-description">
                Basic Blazor counter component demonstration.
            </div>
        </NavLink>
        
        <NavLink href="weather" class="nav-button">
            <span class="nav-button-icon">🌤️</span>
            <div class="nav-button-title">Weather Demo</div>
